# AI Logger Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# AI Provider Configuration
# =============================================================================

# Azure OpenAI Configuration (Primary)
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"

# OpenAI Configuration (Backup)
OPENAI_API_KEY="your-openai-api-key"

# Ollama Configuration (Local/On-premises)
OLLAMA_BASE_URL="http://localhost:11434"

# =============================================================================
# Security Configuration
# =============================================================================

# Data Encryption
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Azure Key Vault (for production secrets management)
KEY_VAULT_ENDPOINT="https://your-keyvault.vault.azure.net/"
KEY_VAULT_CLIENT_ID="your-service-principal-client-id"
KEY_VAULT_CLIENT_SECRET="your-service-principal-client-secret"
KEY_VAULT_TENANT_ID="your-azure-tenant-id"

# =============================================================================
# Storage Configuration
# =============================================================================

# Azure Storage Account
STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-storage-key;EndpointSuffix=core.windows.net"

# =============================================================================
# Monitoring and Logging Configuration
# =============================================================================

# Application Insights
APPINSIGHTS_CONNECTIONSTRING="InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/"
APPINSIGHTS_INSTRUMENTATIONKEY="your-instrumentation-key"

# =============================================================================
# Application Configuration
# =============================================================================

# Environment
ASPNETCORE_ENVIRONMENT="Production"
DOTNET_ENVIRONMENT="Production"

# Application Settings
AILOGGER_LOG_LEVEL="Information"
AILOGGER_BATCH_SIZE="50"
AILOGGER_MAX_PARALLELISM="2"
AILOGGER_TIMEOUT_SECONDS="60"

# =============================================================================
# Database Configuration (if applicable)
# =============================================================================

# SQL Server / Azure SQL Database
DATABASE_CONNECTION_STRING="Server=your-server.database.windows.net;Database=ailogger;User Id=your-username;Password=your-password;Encrypt=True;TrustServerCertificate=False;"

# Cosmos DB (if using NoSQL storage)
COSMOS_DB_CONNECTION_STRING="AccountEndpoint=https://your-cosmosdb.documents.azure.com:443/;AccountKey=your-cosmos-key;"
COSMOS_DB_DATABASE_NAME="ailogger"
COSMOS_DB_CONTAINER_NAME="logs"

# =============================================================================
# Network Configuration
# =============================================================================

# Proxy settings (if required)
HTTP_PROXY=""
HTTPS_PROXY=""
NO_PROXY="localhost,127.0.0.1"

# =============================================================================
# Performance Tuning
# =============================================================================

# Memory limits (in MB)
AILOGGER_MAX_MEMORY_MB="2048"

# Thread pool settings
DOTNET_ThreadPool_UnfairSemaphoreSpinLimit="6"
DOTNET_DefaultActivityIdFormatString="W"

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
AILOGGER_ENABLE_CACHING="true"
AILOGGER_ENABLE_METRICS="true"
AILOGGER_ENABLE_LOCAL_DETECTION="true"
AILOGGER_ENABLE_BACKUP="true"

# =============================================================================
# External Service Configuration
# =============================================================================

# Custom API endpoints
CUSTOM_API_ENDPOINT=""
CUSTOM_API_KEY=""

# Notification settings
NOTIFICATION_EMAIL=""
NOTIFICATION_WEBHOOK_URL=""

# =============================================================================
# Development/Testing Configuration
# =============================================================================

# Use these for development/testing environments only
DEV_SKIP_AUTHENTICATION="false"
DEV_MOCK_AI_RESPONSES="false"
DEV_ENABLE_DEBUG_LOGGING="false"

# =============================================================================
# Backup and Recovery
# =============================================================================

# Backup storage configuration
BACKUP_STORAGE_CONNECTION_STRING=""
BACKUP_CONTAINER_NAME="ailogger-backups"
BACKUP_RETENTION_DAYS="30"

# =============================================================================
# Health Check Configuration
# =============================================================================

# Health check endpoints and intervals
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_PORT="8080"
HEALTH_CHECK_INTERVAL_SECONDS="30"

# =============================================================================
# Notes for System Administrators
# =============================================================================

# 1. Never commit this file with real secrets to version control
# 2. Use Azure Key Vault or similar for production secret management
# 3. Rotate keys and secrets regularly
# 4. Use managed identity when possible instead of explicit credentials
# 5. Test configuration changes in a non-production environment first
# 6. Monitor application logs for configuration-related errors
# 7. Keep backup copies of working configurations
# 8. Document any custom configuration changes for the team

# =============================================================================
# Environment-Specific Overrides
# =============================================================================

# Development
# AILOGGER_LOG_LEVEL="Debug"
# AILOGGER_ENABLE_DEBUG_LOGGING="true"

# Staging
# ASPNETCORE_ENVIRONMENT="Staging"
# AILOGGER_LOG_LEVEL="Information"

# Production
# ASPNETCORE_ENVIRONMENT="Production"
# AILOGGER_LOG_LEVEL="Warning"
# AILOGGER_ENABLE_DEBUG_LOGGING="false"